<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
           id="cordova-plugin-faiz-molpay"
      version="1.2.1-dev">
    <name>FAiZ Molpay</name>
    <description>Cordova Faiz Molpay Payment Plugin</description>
    <license>Apache 2.0</license>
    <keywords>cordova,molpay,faiz</keywords>
    <engines>
      <engine name="cordova-android" version=">=4.0.0-dev" />
    </engines>

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="FaizMolpay" >
                <param name="android-package" value="org.apache.cordova.faiz.molpay"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <source-file src="src/android/FaizMolpay.java" target-dir="src/org/apache/cordova/molpay" />

        <js-module src="faizMolpay.js" name="faizmolpay">
            <runs />
        </js-module>
    </platform>
	
	<info>
This plugin is to utilize molpay mobile sdk to cordova. use it only if you know how to develop using cordova. min requirement is 4.0.*
	</info>
</plugin>